{
	"compilerOptions": {
		"rootDir": "source",
		"outDir": "dist",
		"target": "es2018",
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"declaration": true
	},
	"include": [
		"source/**/*.ts",
		"source/**/*.js",
	],
	"exclude": [
		"jwt/**/*",
		"source/microservices",
		"source/metalfront",
	]
}
